{
  "watch": ["src", "config"],
  "ext": "js,json",
  "ignore": [
    "**/*.test.js",
    "**/*.spec.js",
    "node_modules/**",
    "logs/**",
    "data/**",
    ".git/**",
    "web/**"
  ],
  "exec": "node src/app.js",
  "delay": 500,
  "env": {
    "NODE_ENV": "development"
  },
  "verbose": true
}
